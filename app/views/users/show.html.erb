
   <%= form_for(@user) do %>

       <%= label_tag(:username, "Username:") %>
       <%= text_field_tag(:username, @user.username) %>
   <br />
       <%= label_tag(:email, "Email: ") %>
       <%= email_field_tag(:email, @user.email) %>
   <br />
       <%= label_tag(:password, "Password: ") %>
       <%= password_field_tag(:password, @user.password) %>
   <br />
       <%= submit_tag("Create") %>
   <% end %>
