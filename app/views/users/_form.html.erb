<%= form_for(@user) do %>

    <%= label_tag(:username, "Username:") %>
    <%= text_field(:user, :username) %>
    <br />
    <%= label_tag(:email, "Email: ") %>
    <%= email_field(:user, :email) %>
    <br />
    <%= label_tag(:password, "Password: ") %>
    <%= password_field(:user, :password) %>
    <br />
    <%= submit_tag("Update") %>
<% end %>
